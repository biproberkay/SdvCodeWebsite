@{
    ViewData["Title"] = "Activities";
    var colors = new Dictionary<string, string>()
{
        { UserActionsStatus.Unread.ToString(), "red" },
        { UserActionsStatus.Read.ToString(), "green"},
        { UserActionsStatus.Pinned.ToString(), "blue"},
    };
}

@model ActivitiesPaginationViewModel

