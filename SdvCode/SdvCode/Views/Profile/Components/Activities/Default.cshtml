        {
            <div class="media activity-item">
                <a asp-area="" asp-controller="Profile" asp-action="Index" asp-route-username="@action.FollowerUsername" class="pull-left">
                    <img src=@action.ProfileImageUrl alt="Avatar" class="media-object avatar">
                </a>
                <div class="media-body">
                    <p class="activity-title">
                        <a asp-area="" asp-controller="Profile" asp-action="Index" asp-route-username="@action.PersonUsername">
                            <b>@action.PersonUsername</b>
                        </a> started following
                        <a asp-area="" asp-controller="Profile" asp-action="Index" asp-route-username="@action.FollowerUsername">
                            <b>@action.FollowerUsername</b>
                        </a>
                    </p>
                    @if (User.Identity.Name == action.ApplicationUser.UserName)
                    {
                        <p>
                            <span style="font-size: 14px">Status: </span>
                            <span>
                                <b id="@action.Id" style="color: @colors[action.ActionStatus.ToString()]; text-transform: uppercase">
                                    @action.ActionStatus.ToString()
                                </b>
                            </span>
                        </p>
                    }
                    <small class="text-muted">@action.ActionDate.ToLocalTime().ToString("dd-MMMM-yyyy HH:mm tt")</small>
                </div>
                @if (User.Identity.Name == action.ApplicationUser.UserName)
                {
                    <div class="btn-group pull-right activity-actions">
                        <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-th"></i>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li><a asp-controller="Profile" asp-action="DeleteActivityById" asp-route-username="@User.Identity.Name" asp-route-activityId="@action.Id">I don't want to see this</a></li>
                            @foreach (var status in Enum.GetValues(typeof(UserActionsStatus)))
                            {
                                <li>
                                    <a onclick="changeActionStatus('@action.Id', '@action.ApplicationUser.UserName', '@status')">
